#include <stdio.h>


int puissance(int x,int n){
  int res=0;
  
  
  
  if(n==0){
    res = 1;
  }else if ((n%2!=0)){
    res = x*puissance(x,n-1);
  }else {
    res = puissance(x*x,n/2);
  }
  return res;
}



void main(){
  int res;
  res = puissance(2,4);
  printf("puissance de 2Â³=%d \n",res);
}